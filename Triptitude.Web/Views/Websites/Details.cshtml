@{
    ViewBag.Title = "Website Details";
}
@section Scripts {
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
}
<div id="main-container">
    <div class="panel">
        <div class="panel-title">
            <h1>@ViewBag.Website.Title</h1>
        </div>
        <div class="panel-content-not-padded">
            <img src="@Url.WebsiteThumb((Website)ViewBag.Website, Website.ThumbSize.Large)" alt="" />
            <a href="@ViewBag.Website.URL">@ViewBag.Website.URL</a>
        </div>
    </div>
    <div class="panel">
        <h2>
            Trips</h2>
        <div class="panel-content">
            <div id="hotel-details-related-trips">
                @Html.Action("_rows", "trips", new { trips = ViewBag.Website.Trips })
            </div>
        </div>
    </div>
</div>
