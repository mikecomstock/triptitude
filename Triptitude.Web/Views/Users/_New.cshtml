@{
    ViewBag.Title = "Sign Up";
}
<div class="panel">
    <header>
        <h1>
            Create An Account
        </h1>
    </header>
    <div class="subtitle">
        <p>
            <strong>You can <a href="/trips/new">try triptitude</a> without creating an account.</strong>
        </p>
        <p>
            Creating an account will ensure that you don't lose your trip data.
        </p>
    </div>
    <div class="panel-content">
        <form id="sign-up">
        <p class="firstname">
            <label for="firstname">
                First Name</label>
            <input type="text" name="firstname" id="firstname" />
        </p>
        <p class="lastname">
            <label for="lastname">
                Last Name</label>
            <input type="text" name="lastname" id="lastname" />
        </p>
        <p class="email">
            <label for="email2">
                Email</label>
            <input type="text" name="email" id="email2" />
        </p>
        <p class="password">
            <label for="password2">
                Create a Password</label>
            <input type="password" name="password" id="password2" />
        </p>
        <p class="submit">
            <input type="submit" value="Create Account" />
            <a href="/login">I have an account</a>
        </p>
        </form>
    </div>
</div>
