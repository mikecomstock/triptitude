<div id="header-container">
    <div id="header">
        <a id="logo" href="/">Triptitude.com</a>
        <div id="search">
            <form action="@Url.DestinationSearch()" method="post">
            <input type="text" name="s" class="destination-autocomplete" data-hidden-field-name="destinationid" data-auto-submit="true" placeholder="Where are you going?" />
            <input type="hidden" name="destinationid" />
            <input type="submit" value="Go >" />
            </form>
        </div>
        <div id="user-status">
            @if (Request.IsAuthenticated)
            {
                <div id="user-status-header">
                    Welcome back, <a href="@Url.MyAccount()">@ViewBag.User.Email</a>
                </div>
                <div id="user-status-menu">
                    <a href="@Url.CreateTrip()">create a trip</a> <a href="@Url.MyTrips()">my trips</a>
                    @Html.RouteLink("sign out", "logout")
                </div>
            }
            else
            {
                <div id="user-status-header">
                    @Html.RouteLink("Login", "Login", null, new { id = "login-link", rel = "nofollow" })
                </div>
                <div id="start-here">
                    Hi are you new? <a href="/">Start here</a>
                </div>
            }
        </div>
    </div>
</div>
<div id="header-height-fill">
</div>
@if (ViewBag.User != null && ViewBag.User.DefaultTrip != null)
{     
    <div id="trip-bar-container">
        <div id="trip-bar">
            <div id="trip-bar-menu">
                <ul>
                    <li><a href="@Url.Details((Trip)ViewBag.User.DefaultTrip)">Itinerary</a></li>
                    <li><span class="add-plans-link link">+ Add Plans</span>
                        <ul>
                            <li><a data-trip-id="@ViewBag.User.DefaultTrip.Id" class="add-transportation-link link">Transportation<span>Like <strong>Fly</strong> from <strong>Boston</strong> to <strong>San Francisco</strong></span></a></li>
                            <li><a data-trip-id="@ViewBag.User.DefaultTrip.Id" class="add-website-link link">Website<span>Like <strong>http://www.some-travel-site.com</strong></a></li>
                            <li><a data-trip-id="@ViewBag.User.DefaultTrip.Id" class="add-tag-link link">Activity<span>Like <strong>Whale Watching</strong> in <strong>Boston</strong></span></a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div id="trip-bar-pre-title">
                currently planning...</div>
            <div id="trip-bar-title">
                @ViewBag.User.DefaultTrip.Name
            </div>
        </div>
    </div>
}
else if (ViewBag.HideTripBar != true)
{
    <div id="trip-bar-container">
        <div id="trip-bar">
            <div id="trip-bar-title">
                Like to travel? Plan your next trip.
            </div>
            <form action="" id="start-here-form">
            <input type="text" name="email" placeholder="Your email address..." />
            <input type="text" name="tripname" placeholder="Name your trip..." />
            <input type="text" name="destination" class="destination-autocomplete" placeholder="Where are you going?" />
            <input type="hidden" name="destinationid" />
            <input type="submit" value="Start Planning >" />
            </form>
        </div>
    </div>
}