<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"></script>
    <script src="/Scripts/jquery.placeholder.js" type="text/javascript"></script>
    <script src="/Scripts/triptitude.js" type="text/javascript"></script>
</head>
<body>
    <div class="fader">
        &nbsp;</div>
    <div id="background">
        <div class="fader">
            &nbsp;</div>
        <img src="@Url.Background("dreamstimefree_524710.jpg")" alt="" />
    </div>
    @Html.Action("Header", "Home")
    @if (ViewBag.HideTripBar != true)
    {
        <div id="trip-bar-container">
            <div id="trip-bar">
                @if (ViewBag.User != null && ViewBag.User.DefaultTrip != null)
                {     
@*<form id="add-website-to-trip-form" action="@Url.AddWebsiteToTrip()" method="post"><input type="text" name="url" placeholder="Add a website URL to this trip..." /><input type="submit" value="Add" /></form>*@
                    <div id="trip-nav-bar">
                        <a href="@Url.PlanItinerary((Trip)ViewBag.User.DefaultTrip)">Itinerary</a> <a href="@Url.Map((Trip)ViewBag.User.DefaultTrip)">
                            Map</a> @*<a href="@Url.Print((Trip)ViewBag.User.DefaultTrip)">Print</a>*@ <a id="trip-settings-link" href="@Url.Settings((Trip)ViewBag.User.DefaultTrip)">
                                Settings</a>
                    </div> 
                    <div id="trip-bar-pre-title">
                        currently planning...</div>
                    <div id="trip-bar-title">
                        @ViewBag.User.DefaultTrip.Name
                    </div> 
                }
                else
                {
                    <div id="trip-bar-title">
                        Like to travel? Plan your next trip.
                    </div>
                    <form action="">
                    <input type="text" name="email" placeholder="Enter your email address..." />
                    <input type="text" name="tripname" placeholder="Name your trip..." />
                    <input type="submit" value="Start Planning >" />
                    </form>
                }
            </div>
        </div>
    }
    <div id="content">
        @RenderBody()
        <div class="clear">
        </div>
    </div>
    <div id="footer">
        @ViewBag.ShowTripBar
    </div>
    @if (false)
    {
        @RenderSection("Analytics")
    }
</body>
</html>
@section Analytics {
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-3390924-10']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
}