@{
    ViewBag.Title = "My Settings";
    UserSettingsForm form = (UserSettingsForm)ViewBag.Form;
}
@Html.Action("SidePanel", "My")
<div id="main-container">
    <div class="panel">
        <div class="panel-title">
            <h1>
                My Settings</h1>
        </div>
        <div class="panel-content">
            <form id="my-settings-form" action="@Url.MySettings()" method="post">
            <p>
                <label for="email">
                    Email
                </label>
                <input type="text" name="email" id="email" value="@form.Email" />
            </p>
            <p>
                <label for="password">
                    Password
                </label>
                <input type="password" name="password" id="password" />
            </p>
            <input type="submit" value="Save Settings" />
            </form>
        </div>
    </div>
</div>
