@{
    ViewBag.Title = ViewBag.City.ASCIIName;
    City City = ViewBag.City;
}
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {

        var myLatlng = new google.maps.LatLng(@City.Latitude, @City.Longitude);
        var myOptions = {
          zoom: 14,
          center: myLatlng,
          mapTypeId: google.maps.MapTypeId.ROADMAP
        }
        var map = new google.maps.Map(document.getElementById("city-details-map-container"), myOptions);
        
    });
</script>
<div id="side-container">
    <a href="#">map</a> <a href="#">trips</a> <a href="#">hotels</a> <a href="#">activities</a>
</div>
<div id="main-container">
    <div class="panel">
        <div class="panel-title">
            <h1>@ViewBag.City.ASCIIName, @ViewBag.City.Region.ASCIIName, @ViewBag.City.Region.Country.Name</h1>
        </div>
        <div class="panel-content">
            <div id="city-details-map-container">
            </div>
        </div>
    </div>
    <div class="panel">
        <h2>
            Trips to @ViewBag.City.ASCIIName</h2>
        <div class="panel-content">
            <div id="city-details-related-trips">
                @Html.Action("_rows", "trips", new { trips = ViewBag.Trips })
            </div>
        </div>
    </div>
</div>
