@{
    ViewBag.Title = "Plan trips, together";
    ViewBag.Description = "Triptitude helps you plan trips. Create the vacation of your dreams alone, or invite your fellow travelers to help.";
}
<div id="landing-page-panel-container">
    <div id="landing-page-panel">
        <h1>
            Plan trips, together
        </h1>
        <p>
            Triptitude helps you plan trips. Create the vacation of your dreams alone, or invite your fellow travelers to help. Make sure your itinerary is perfect before you book. With your travel plans in one place, you'll be able to enjoy stress-free travel.
        </p>
        <form action="@Url.CreateTrip()" method="post" id="create-trip-form">
        @Html.AntiForgeryToken()
        <h3>
            Create a Trip</h3>
        <p>
            <input type="text" name="destination" placeholder="destination..." />
        </p>
        <p>
            <label for="visibility">
                Visibility</label>
            @Html.DropDownList("visibility", UserTrip.UserTripVisibility.Public.ToSelectList())
        </p>
        <p>
            <input type="submit" value="Start Planning" />
        </p>
        </form>
    </div>
</div>
