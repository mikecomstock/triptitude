<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"></script>
    <script src="/Scripts/jquery.placeholder.js" type="text/javascript"></script>
    <script src="/Scripts/triptitude.js" type="text/javascript"></script>
</head>
<body>
    <div class="fader">
        &nbsp;</div>
    <div id="background">
        <div class="fader">
            &nbsp;</div>
        <img src="@Url.Background("dreamstimefree_524710.jpg")" alt="" />
    </div>
    @Html.Action("Header", "Home")
    <div id="content">
        @RenderBody()
        <div class="clear">
        </div>
    </div>
    <div id="footer">
    </div>
    @if (false)
    {
        @RenderSection("Analytics")
    }
</body>
</html>
@section Analytics {
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-3390924-10']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
}