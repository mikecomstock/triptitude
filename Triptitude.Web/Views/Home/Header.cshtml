@{
    User currentUser = (User)ViewBag.CurrentUser;
}
<div id="header-container">
    <div id="header">
        <a id="logo" href="/">Triptitude.com</a>
        <div id="search">
            <form action="@Url.DestinationSearch()" method="post">
            <input type="text" name="s" class="destination-autocomplete" data-hidden-field-name="destinationid" data-auto-submit="true" placeholder="Where are you going?" />
            <input type="hidden" name="destinationid" />
            <input type="submit" value="Go >" />
            </form>
        </div>
        <div id="user-status">
            @if (Request.IsAuthenticated)
            {
                <div id="user-status-header">
                    Welcome, <a href="@Url.MyTrips()">@currentUser.Email</a>
                </div>
                <div id="user-status-menu">
                    <a href="@Url.CreateTrip()">create a trip</a> <a href="@Url.MyTrips()">my trips</a>
                    @Html.RouteLink("sign out", "logout")
                </div>
            }
            else if (currentUser.Trips != null && currentUser.Trips.Any())
            {
                <div id="user-status-header">
                    Welcome, <a href="@Url.MyTrips()">anonymous user</a>
                </div>
                <div id="user-status-menu">
                    <a href="@Url.CreateTrip()">create a trip</a> <a href="@Url.MyTrips()">my trips</a>
                    @Html.RouteLink("log in", "login", null, new { id = "login-link", rel = "nofollow" })
                </div>
            }
            else
            {
                <div id="user-status-header">
                    @Html.RouteLink("Login", "Login", null, new { id = "login-link", rel = "nofollow" })
                </div>
                <div id="start-here-link">
                    Hi, are you new? <a href="/">Start here</a>
                </div>
            }
        </div>
    </div>
</div>
<div id="scrollanchor">
</div>
@if (currentUser.DefaultTrip != null)
{     
    
    <div id="trip-bar-container">
        <div id="trip-bar">
            <div id="trip-bar-menu">
                <ul>
                    <li><a href="@Url.Details(currentUser.DefaultTrip)">Itinerary</a></li>
                    <li><span class="add-plans-link link">+ Add Plans</span>
                        <ul>
                            <li><a class="add-activity link" data-activity-type="transportation">Transportation<span>Like <strong>Fly</strong> from <strong>Boston</strong> to <strong>San Francisco</strong></span></a></li>
                            <li><a class="add-activity link" data-activity-type="place">Place / Activity<span>Like <strong>Whale Watching </strong>in <strong>Boston</strong></span></a></li>
                            <li><a class="add-activity link" data-activity-type="website">Website<span>Like <strong>http://www.some-travel-site.com</strong></span></a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div id="trip-bar-pre-title">
                currently planning...</div>
            <div id="trip-bar-title">
                @currentUser.DefaultTrip.Name
            </div>
            @if (string.IsNullOrWhiteSpace(currentUser.Email) && currentUser.Trips != null && currentUser.Trips.Any())
            {
                <div id="email-warning">
                    You'll lose your trip unless you <a href="@Url.MySettings()">create an account</a> or @Html.RouteLink("log in", "login", null, new { id = "login-link", rel = "nofollow" })!
                </div>
            }
        </div>
    </div>
}
else if (ViewBag.HideTripBar != true)
{
    <div id="trip-bar-container">
        <div id="trip-bar">
            <div id="trip-bar-title">
                Like to travel? Plan your next trip.
            </div>
            <form action="@Url.CreateTrip()" method="post" id="create-trip-form">
            @Html.AntiForgeryToken()
            <p>
                <input type="text" name="fromname" data-hidden-field-name="fromid" class="destination-autocomplete" placeholder="From (any city)" />
                <input type="hidden" id="fromid" name="fromid" />
            </p>
            <p>
                <input type="text" name="toname" data-hidden-field-name="toid" class="destination-autocomplete" placeholder="To (any city)" />
                <input type="hidden" id="toid" name="toid" />
            </p>
            <p>
                <label for="numberofdays">
                    Number of days</label>
                <input type="text" id="numberofdays" name="numberofdays" />
            </p>
            <p>
                <input type="submit" value="Start Planning >" />
            </p>
            </form>
        </div>
    </div>
}