@{
    ViewBag.Title = "Trip Settings";
}
@Html.Action("SidePanel", "Trips", new { ViewBag.Trip })
<div id="main-container">
    <div class="panel">
        <div class="panel-title">
            <h1>
                Settings</h1>
        </div>
        <div class="panel-content">
            <form action="@Url.Settings((Trip)ViewBag.Trip)" method="post" class="trip-settings">
            <p>
                <label for="name">
                    Trip Name</label>
                <input type="text" name="name" value="@ViewBag.Form.Name" />
            </p>
            <p>
                <label for="begindate">
                    Start Date</label>
                <input type="text" name="begindate" value="@ViewBag.Form.BeginDate" />
            </p>
            <input type="submit" value="Save Settings" />
            </form>
        </div>
    </div>
</div>
