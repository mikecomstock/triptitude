@{
    ViewBag.Title = ViewBag.Hotel.Name;
    Hotel hotel = ViewBag.Hotel;
}
@section Scripts {
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script type="text/javascript" charset="utf-8">
        $(document).ready(function () {
        
            var hotelPoint = new google.maps.LatLng(@hotel.Latitude, @hotel.Longitude);
            var myOptions = {
              zoom: 15,
              center: hotelPoint,
              mapTypeId: google.maps.MapTypeId.ROADMAP
            }
            var map = new google.maps.Map(document.getElementById("hotel-details-map-container"), myOptions);
            var hotelMarker = new google.maps.Marker({ position: hotelPoint, map: map, title: '@hotel.Name' });
        });
    </script>
}
<div id="side-container">
    <a href="#">Details</a> <a href="#">Map</a> <a href="#">Trips</a> <a href="#">Alternatives</a>
</div>
<div id="main-container">
    <div class="panel">
        <div class="panel-title">
            <div data-hotel-id="@hotel.Id" class="link add-hotel-link">
                Add to Trip</div>
            <h1>@hotel.Name</h1>
        </div>
        <div class="panel-content-not-padded">
            <div id="hotel-details-photo-list">
                <img class="hotel-photo" alt="" src="@hotel.Photo.ImageURL" />
            </div>
        </div>
    </div>
    <div class="panel">
        <h2>
            Map and Address</h2>
        <div class="panel-content">
            <div id="hotel-details-map-container">
            </div>
        </div>
    </div>
    <div class="panel">
        <h2>
            Trips to @ViewBag.Hotel.Name</h2>
        <div class="panel-content">
            <div id="hotel-details-related-trips">
                @Html.Action("_rows", "trips", new { trips = hotel.Trips })
            </div>
        </div>
    </div>
</div>
