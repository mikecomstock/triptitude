@{
    Layout = null;
    IEnumerable<Trip> trips = (IEnumerable<Trip>)ViewBag.Trips;
    IEnumerable<IDestination> destinations = (IEnumerable<IDestination>)ViewBag.Destinations;
}
<?xml version="1.0" encoding="UTF-8" ?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
   <url>
      <loc>http://www.triptitude.com</loc>
      <changefreq>daily</changefreq>
   </url>
   @foreach (Trip trip in trips)
   {
   <url>
      <loc>@("http://www.triptitude.com" + Url.Details(trip))</loc>
      <changefreq>daily</changefreq>
   </url>
   <url>
      <loc>@("http://www.triptitude.com" + Url.Map(trip))</loc>
      <changefreq>daily</changefreq>
   </url>
   <url>
      <loc>@("http://www.triptitude.com" + Url.PackingList(trip))</loc>
      <changefreq>daily</changefreq>
   </url>
   }
   @foreach (IDestination destination in destinations)
   {
   <url>
      <loc>@("http://www.triptitude.com" + Url.Details(destination))</loc>
      <changefreq>daily</changefreq>
   </url>
   }
</urlset>
