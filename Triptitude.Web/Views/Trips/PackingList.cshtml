@{
    ViewBag.Title = @ViewBag.Trip.Name;
    ViewBag.ShowInSiteMap = @ViewBag.Trip.ShowInSiteMap;
    var items = (IEnumerable<Item>)ViewBag.Items;
    var tags = (IEnumerable<Tag>)ViewBag.Tags;
}
@Html.Action("SidePanel", "Trips", new { ViewBag.Trip })
<div id="main-container">
    <div class="panel">
        <div class="panel-title">
            <h1>
                @ViewBag.Trip.Name
            </h1>
        </div>
        <div class="panel-content">
            <div class="items">
                @foreach (var tag in tags.Where(t => t.Items.Any()))
                {
                    <div class="tag-group">
                        <div class="title">@tag.NiceName</div>
                        <ul class="items">
                            @foreach (var item in tag.Items)
                            {
                                <li>
                                    <input type="checkbox" disabled="disabled" />
                                    @if (!string.IsNullOrWhiteSpace(item.ASIN))
                                    {
                                        <span><a href="@Url.ASINLink(item.ASIN)">@item.Name</a> </span>
                                        <img src="@Url.ASINSmallImage(item.ASIN)" alt="" />
                                    }
                                    else
                                    {
                                        <span>
                                            @item.Name
                                        </span>
                                    }
                                </li>
                                
                            }
                        </ul>
                    </div>
                }
                @*@foreach (var item in items)
                {
                    <div class="item">
                        @item.Name
                        @if (!string.IsNullOrWhiteSpace(item.URL))
                        {
                            <a href="@item.URL">Buy on Amazon</a>
                        }
                        <div class="item-tags">
                            Tags:
                            @foreach (var tag in tags.Where(t => t.Items.Contains(item)))
                            {
                                <a href="@Url.Details(tag)">@tag.Name</a>
                            }
                        </div>
                    </div>
                }*@
            </div>
        </div>
    </div>
</div>
